#include <bits/stdc++.h>

#define el "\n"
#define dl double
#define int long long
#define sz(s) s.size()
#define all(v) v.begin(),v.end()
#define rall(v) v.rbegin(),v.rend()
#define input(v) for(auto &i : v) {cin>>i;}
#define output(v) for(auto &i : v) {cout<<i<<' ';}
using namespace std;
void in_out(){
  // freopen("store.in", "r", stdin);
//freopen("standard output", "w", stdout);
}
void solve()
{
   int l,r; cin>>l>>r;
   int cnt=0;
   for(int i=l;i<=r;i+=cnt){
     cnt++;
   }
   cout<<cnt<<el;
}
signed main()
{
   ios_base::sync_with_stdio(0);
   cin.tie(0);
   cout.tie(0);
   int T;
   //T=1;
   cin>>T;
   while(T--){
    solve();
   }
    return 0;
}
